    <!-- Navigation -->
    <nav id="controls" class="top-navigation top fixedsticky">
        <div class="container text-center">
          <div class="btn-group btn-group-lg">
            <button type="button" id="textchat" class="btn btn-default">
              <i class="fa fa-comment"></i>
              <span class="sr-only">Toggle text</span>
            </button>
            <button type="button" class="btn btn-default disabled">
              <i class="fa fa-video-camera"></i>
              <span class="sr-only">Toggle camera</span>
            </button>
            <button type="button" class="btn btn-default disabled">
              <i class="fa fa-microphone"></i>
              <span class="sr-only">Toggle microphone</span>
            </button>
            <button type="button" class="btn btn-default disabled">
              <i class="fa fa-volume-off"></i>
              <span class="sr-only">Mute call</span>
            </button>
            <button type="button" id="call" class="btn btn-default">
              <i class="fa fa-phone"></i>
              <span class="sr-only">Make call</span>
            </button>
            <button type="button" id="hangup" class="btn btn-default">
              <i class="fa fa-sign-out"></i>
              <span class="sr-only">Leave call</span>
            </button>
          </div>
        </div>
        <!-- /.container -->
    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Hangout
                    </a>
                </li>
                <li>
                    <a href="#" role="button" class="btn btn-link disabled">
                      <i class="fa fa-comment fa-x2"></i>
                      <span class="sr-only">Chat</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-link disabled">
                      <i class="fa fa-desktop fa-x2"></i>
                      <span class="sr-only">Screen Share</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-link disabled">
                      <i class="fa fa-camera fa-x2"></i>
                      <span class="sr-only">Capture</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-link disabled">
                      <i class="fa fa-cog fa-x2"></i>
                      <span class="sr-only">Effects</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-link disabled">
                      <i class="fa fa-film fa-x2"></i>
                      <span class="sr-only">Video</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="btn btn-link disabled">
                      <i class="fa fa-ellipsis-h fa-x2"></i>
                      <span class="sr-only">Apps</span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-lg-12">
                      <!--a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a-->
                  </div>
              </div>
          </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <div id="participants" class="video-call-participants bottom fixedsticky">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-2 pull-right">
